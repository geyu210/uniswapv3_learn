{
    "compilerOptions": {
      "lib": ["ES2020", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "target": "ES2020",
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "exclude": [
      "./tests/",
      "./node_modules/",
      "./dist/"
    ],
}